<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.smbms.dao.bill.BillMapper">
	<!-- 获取订单信息 -->
	<select id="getBillList" resultType="Bill">
		select * from smbms_bill
		<trim prefix="where" prefixOverrides="and | or">
			<if test="productName != null and productName != ''">
				and productName like concat('%',#{productName},'%')
			</if>
			<if test="billCode != null and billCode != ''">
				and billCode like concat('%',#{billCode},'%')
			</if>
		</trim>
		order by creationDate DESC limit #{currentPageNo},#{pageSize}
	</select>
	<!-- 根据Providerid获取订单信息 -->
	<select id="getBillByProviderId"  resultType="Bill">
		select * from smbms_bill where providerId = #{providerId}
	</select>
	<!-- 根据Providerid删除订单信息 -->
	<delete id="deleteBillByProviderId">
		delete from smbms_bill where providerId = #{providerId}
	</delete>
</mapper>